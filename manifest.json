{
    "manifest_version": 2,

    "name": "FreshView for YouTube™",
    "short_name": "FreshView for YouTube™",
    "description": "Hide YouTube™ videos you've already watched to easily discover fresh content.",
    "version": "2.0.1",

    "icons": {
         "16": "img/icon16.png",
         "32": "img/icon32.png",
         "48": "img/icon48.png",
        "128": "img/icon128.png"
    },

    "page_action": {
        "default_icon": {
            "16": "img/icon16.png",
            "19": "img/icon19.png",
            "24": "img/icon24.png",
            "32": "img/icon32.png",
            "38": "img/icon38.png"
        },
        "default_popup": "html/popup.html",
        "default_title": "FreshView for YouTube™"
    },

    "commands": {
        "toggle-hide-videos-checkbox": {
            "description": "Toggle \"Hide Videos\""
        },
        "toggle-view-threshold-checkbox": {
            "description": "Toggle \"View Threshold\""
        }
    },

    "background": {
        "scripts": [
            "js/manager.js",
            "js/storage.js",
            "js/background.js"
        ],
        "persistent": false
    },

    "content_scripts": [{
            "matches": ["*://*.youtube.com/*"],
            "js": [
                "js/album.js",
                "js/logger.js",
                "js/manager.js",
                "js/path.js",
                "js/storage.js",
                "js/video.js",
                "js/injection.js"
            ],
            "run_at": "document_idle"
    }],

    "permissions": [
        "storage",
        "tabs"
    ]
}
